	</action>
	<action name="reddit/movies" id="website-reddit-movies">
		<do>
			<runaction id="website" input="https://www.reddit.com/r/movies"/>
		</do>
	</action>
	<action name="reddit/music" id="website-reddit-music">
		<do>
			<runaction id="website" input="https://www.reddit.com/r/music"/>
		</do>
	</action>
	
	<!-- bing -->
	<action name="bing" id="website-bing" image="images/bing.png">
		<do>
			<runaction 
				condition="'input_text' != ''"
				id="website" 
				input="https://www.bing.com/search?q={{input_text}}"/>
			<runaction 
				condition="'input_text' == ''"
